<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F8FA"

    android:orientation="vertical"
    tools:context=".ProfileActivity">


    <Button
        android:id="@+id/btn_generar_pedido"
        android:layout_width="251dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="78dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="434dp"
        android:background="@drawable/btn_fondo_color"
        android:elevation="5dp"
        android:text="Generar Pedido"
        android:textColor="#fff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_cerrar_sesion"
        android:layout_width="251dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="77dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="496dp"
        android:background="@drawable/btn_fondo_color"
        android:elevation="5dp"
        android:text="cerrar sesion"
        android:textColor="#fff"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/editTextCantidad"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="372dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextPrecio"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="318dp"
        android:layout_marginEnd="45dp"
        android:ems="10"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinnerDescripcion"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="433dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="44dp"
        android:entries="@array/defaultValue" />

    <TextView
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="526dp"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="39dp"
        android:text="BIENVENIDO"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="529dp"
        android:layout_marginEnd="30dp"
        android:text="Nombre del usuario"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="480dp"
        android:layout_marginEnd="165dp"
        android:layout_marginStart="43dp"
        android:text="El Galon es para..." />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="382dp"
        android:layout_marginEnd="171dp"
        android:layout_marginStart="45dp"
        android:text="Cantidad de galones" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="333dp"
        android:layout_marginEnd="248dp"
        android:layout_marginStart="49dp"
        android:text="Precio" />

</RelativeLayout>